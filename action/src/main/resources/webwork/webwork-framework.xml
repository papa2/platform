<!DOCTYPE xwork PUBLIC "-//OpenSymphony Group//XWork 1.1.1//EN" "http://www.opensymphony.com/xwork/xwork-1.1.1.dtd">
<xwork>
	<package name="{http://client}client$framework"
		namespace="/framework">

		<result-types>
			<result-type name="velocity" class="com.opensymphony.webwork.dispatcher.VelocityResult" default="true" />
			<result-type name="httpheader" class="com.opensymphony.webwork.dispatcher.HttpHeaderResult" />
			<result-type name="chain" class="com.opensymphony.xwork.ActionChainResult" />

			<result-type name="redirect" class="com.papa2.platform.framework.webwork.result.RedirectResult" />
			<result-type name="redirect-action" class="com.papa2.platform.framework.webwork.result.RedirectActionResult" />
		</result-types>

		<interceptors>
			<interceptor name="exception" class="com.papa2.platform.framework.webwork.interceptor.ExceptionInterceptor">
				<param name="ignoreExceptions">java.net.SocketException</param>
				<param name="logEnabled">true</param>
				<param name="logLevel">error</param>
			</interceptor>
			<interceptor name="alias" class="com.opensymphony.xwork.interceptor.AliasInterceptor" />
			<interceptor name="servlet-config" class="com.opensymphony.webwork.interceptor.ServletConfigInterceptor" />
			<interceptor name="prepare" class="com.opensymphony.xwork.interceptor.PrepareInterceptor" />
			<interceptor name="i18n" class="com.opensymphony.xwork.interceptor.I18nInterceptor" />
			<interceptor name="chain" class="com.opensymphony.xwork.interceptor.ChainingInterceptor" />
			<interceptor name="model-driven" class="com.opensymphony.xwork.interceptor.ModelDrivenInterceptor" />
			<interceptor name="fileUpload" class="com.opensymphony.webwork.interceptor.FileUploadInterceptor" />
			<interceptor name="static-params" class="com.opensymphony.xwork.interceptor.StaticParametersInterceptor" />
			<interceptor name="params" class="com.opensymphony.xwork.interceptor.ParametersInterceptor" />
			<interceptor name="conversionError" class="com.opensymphony.webwork.interceptor.WebWorkConversionErrorInterceptor" />
			<interceptor name="validation" class="com.opensymphony.xwork.validator.ValidationInterceptor">
				<param name="excludeMethods">login,logout,create,update,detail,activate</param>
			</interceptor>
			<interceptor name="workflow" class="com.opensymphony.xwork.interceptor.DefaultWorkflowInterceptor">
				<param name="excludeMethods">login,logout,create,update,detail,activate</param>
			</interceptor>

			<interceptor name="decodeParams" class="com.papa2.platform.framework.webwork.interceptor.DecodeParametersInterceptor" />

			<interceptor name="actionMonitor" class="actionMonitorInterceptor" />

			<interceptor-stack name="defaultStack">
				<interceptor-ref name="exception" />
				<interceptor-ref name="alias" />
				<interceptor-ref name="servlet-config" />
				<interceptor-ref name="prepare" />
				<interceptor-ref name="i18n" />
				<interceptor-ref name="chain" />
				<interceptor-ref name="model-driven" />
				<interceptor-ref name="fileUpload" />
				<interceptor-ref name="static-params" />
				<interceptor-ref name="decodeParams" />
				<interceptor-ref name="params" />
				<interceptor-ref name="conversionError" />
				<interceptor-ref name="validation" />
				<interceptor-ref name="workflow" />
				<!-- interceptor-ref name="set-app-context" / -->
			</interceptor-stack>

			<interceptor-stack name="authenticationStack">
				<interceptor-ref name="defaultStack" />
				<!-- 操作日志 -->
				<interceptor-ref name="actionMonitor" />
			</interceptor-stack>
			
			<interceptor-stack name="fileUploadStack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="fileUpload" />
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="defaultStack" />

		<global-results>
			<result name="440">/client/framework/error/440.vm</result>
			<result name="exception">/client/framework/error/error_ok.vm</result>
			<result name="isNotExsit">/client/framework/error/isNotExsit.vm</result>
			<result name="authorization_error">/client/framework/error/authorization_error.vm</result>
			<result name="401">/client/framework/error/401.vm</result>
			<result name="resourceResult">/client/framework/common/resourceResult.vm</result>
			<result name="resultMessage">/client/framework/common/resultMessage.vm</result>
		</global-results>

		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception" result="exception" />
		</global-exception-mappings>

	</package>
</xwork>